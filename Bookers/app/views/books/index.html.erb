<div class="top">
	<% if flash[:id] %>
  <div class="flash">
 	<%= flash[:id] %>
  </div>
<% end %>
<h3 class="title">Books</h3>

<table >
<thead class="icon">
<tr>
<th>Title</th>
<th>Body</th>
</tr>
</thead>

<tbody class="body">
<% @books.each do |book| %>
<tr> 
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "Show", book_path(id: book.id) %>
<%= link_to "Edit", edit_book_path(id: book.id) %>
<%= link_to "Destroy", destroy_book_path(id: book.id), method: :delete, "data-confirm" => "Are you sure?" %>
</td>
</tr>  
<% end %>
</tbody>   
</table>

<h3 class="titles">New book</h3>
<% if @book.errors.any? %>
<p>error</p>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>




<h4 class="new">Title</h4>
<%= f.text_field :title %>

<h4 class="new">Body</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>

<% end %>